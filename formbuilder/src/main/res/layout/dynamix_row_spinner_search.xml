<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:theme="@style/ThemeOverlay.Dynamix.App.Dialog"
        tools:theme="@style/Theme.Dynamix.App.DayNight">

        <imageview.avatar.com.avatarimageview.AvatarImageView
            android:id="@+id/rw_ct_pk_lt_image"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="?insetStart"
            app:aiv_first_initial_only="true"
            app:aiv_shape="round"
            app:aiv_text_size="18"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/rw_ct_pk_lt_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:textColor="@color/material_on_surface_emphasis_high_type"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/rw_ct_pk_lt_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginEnd="?attr/insetEnd"
            tools:text="Laxmi Bank" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>